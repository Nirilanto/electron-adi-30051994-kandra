{
  "name": "contrat-manager",
  "version": "1.0.0",
  "description": "Application de gestion de contrats de mission temporaire",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"cross-env BROWSER=none npm run react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "react-start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "electron-build": "electron-builder",
    "package-win": "npx electron-builder --win portable --config electron-builder.yml",
    "make-portable": "npm run build && npm run package-win",
    "release": "npm run build && electron-builder --publish=always"
  },
  "author": "Votre Nom",
  "license": "MIT",
  "dependencies": {
    "@heroicons/react": "^2.0.18",
    "assert": "^2.1.0",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.1",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.1.0",
    "handlebars": "^4.7.8",
    "https-browserify": "^1.0.0",
    "os-browserify": "^0.3.0",
    "papaparse": "^5.5.3",
    "path-browserify": "^1.0.1",
    "pdfkit": "^0.13.0",
    "process": "^0.11.10",
    "puppeteer": "^24.7.2",
    "react": "^18.2.0",
    "react-app-rewired": "^2.2.1",
    "react-datepicker": "^8.3.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.14.0",
    "react-scripts": "5.0.1",
    "react-toastify": "^11.0.5",
    "recharts": "^2.15.3",
    "stream-browserify": "^3.0.0",
    "stream-http": "^3.2.0",
    "url": "^0.11.4"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^25.2.0",
    "electron-builder": "^24.4.0",
    "postcss": "^8.4.24",
    "tailwindcss": "^3.3.2",
    "wait-on": "^7.0.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.contratmanager.app",
    "productName": "Contrat Manager",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "main.js",
      "preload.js",
      "config.js",
      "assets/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "win": {
      "target": [
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "portable": {
      "artifactName": "ContratManager.exe"
    },
    "extraResources": [
      {
        "from": "templates",
        "to": "templates",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "portable.txt",
        "to": "portable.txt"
      }
    ],
    "asar": false,
    "asarUnpack": [
      "node_modules/puppeteer/.local-chromium/**/*"
    ]
  }
}
